<div class = "container-booking">
  <div class = "booking">
    <div class = "text-booking">
      <h1>Create a new booking for <%= @pet.name %> </h1>

      <%= simple_form_for [@pet, @booking] do |f| %>
        <%= f.label :start %>
        <%= f.date_field :start_date %>
        <%= f.label :end %>
        <%= f.date_field :end_date %>
        <%= f.submit %>
      <% end %>

  <button type="button" class="btn my-3 py-2 btn-outline-primary"><%=  link_to 'View your booking', pet_bookings_path(@pet, @booking) %></button>

    </div>
  </div>
</div>
