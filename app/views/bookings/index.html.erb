<div class="container">
  <h1><%= @pet.name %>'s Bookings</h1>
  <div class="bookings-cards">
    <ul>
      <% @bookings.each do |booking| %>
              <p><%= booking.user.email %> | Booking ID: <%= booking.id %></p>
              <p><%= booking.start_date %> to <%= booking.end_date %> | Price: $<%= @pet.price %></p>
              <p> Booking Status: <%= booking.status %></p>
      <% end %>
      </ul>
      <%= button_to 'Return to Listings', pets_path, class: "btn btn-primary", method: :get, style: "border-radius: 20px;"%>
    </div>
</div>
