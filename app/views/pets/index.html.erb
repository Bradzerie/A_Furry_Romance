<div class="container">
  <h1>Pet Listing</h1>
  <div class="pets-cards">
    <ul>
      <% @pets.each do |pet| %>
        <li>
            <h3><%= link_to pet.name, pet_path(pet) %></h3>
            <p><%= pet.species %> | Price: $<%= pet.price %></p>
        </li>
      <% end %>
      </ul>
    </div>
</div>
